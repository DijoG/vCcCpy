[build-system]
requires = [
    "setuptools>=61.0.0",
    "wheel"
]
build-backend = "setuptools.build_meta"

[project]
name = "vCcCpy"
dynamic = ["version"]
dependencies = [
    "numpy>=1.26.0",
    "pandas>=2.1.0",
    "geopandas>=0.14.0", 
    "rasterio>=1.3.8",
    "rioxarray>=0.15.0",
    "shapely>=2.0.2",
    "pyproj>=3.6.1",
    "tqdm>=4.66.0",
    "dask>=2023.10.0",
    "dask-geopandas>=0.3.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "pytest-cov>=4.0.0",
    "black>=23.0.0",
    "flake8>=6.0.0",
]

[tool.setuptools.dynamic]
version = {attr = "vCcCpy.__version__"}